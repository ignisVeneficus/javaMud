<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">

<Properties>
    <property name="javamud">${sys:catalina.base}/logs/javamud.log</property>
    <property name="io">${sys:catalina.base}/logs/io.log</property>

</Properties>

<Appenders>

	<File name="javamud-all" fileName="${javamud}" immediateFlush="true">
		<PatternLayout pattern="%d %x [%-6p] %c{2}.%M() – %m%n" />
     </File>
	<File name="io-all" fileName="${io}" immediateFlush="true">
		<PatternLayout pattern="%d %x [%-6p] %c{2}.%M() – %m%n" />
       <!-- 
        <Policies>
            <SizeBasedTriggeringPolicy size="10000KB" />
        </Policies>
        <DefaultRolloverStrategy max="10"/>
        -->
    </File>
