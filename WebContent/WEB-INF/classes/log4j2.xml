        <appender-ref ref="ConsoleAppender" />
    </Logger>
     <Logger name="org.ignis.javaMud.Mud.Core.Monster"  level="DEBUG" additivity="false">
        <appender-ref ref="javamud-all" />
        <appender-ref ref="ConsoleAppender" />
    </Logger>
    
</Loggers>
</Configuration>