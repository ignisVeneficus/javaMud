	<Console name="ConsoleAppender" target="SYSTEM_OUT">
		<PatternLayout pattern="%d %x [%-6p] %c{2}.%M() – %m%n" />
		<!-- 
		<PatternLayout pattern="%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n" />
		-->
	</Console>

    
</Appenders>
<Loggers>
    <Root level="info" additivity="false">
        <AppenderRef ref="javamud-all"/>
    </Root>
    <Logger name="TODO" additivity="false" level="info">
           <appender-ref ref="javamud-all"/>
            <appender-ref ref="ConsoleAppender" />
    </Logger>
    
    <Logger name="org.springframework" additivity="false" level="info">
            <appender-ref ref="javamud-all"/>
            <appender-ref ref="ConsoleAppender" />
    </Logger>
    <Logger name="org.ignis"  level="trace" additivity="false">
        <appender-ref ref="javamud-all" />
        <appender-ref ref="ConsoleAppender" />
    </Logger>
    
    <Logger name="org.ignis.javaMud.Mud.dataholder.outlands"  level="debug" additivity="false">
        <appender-ref ref="javamud-all" />
        <appender-ref ref="ConsoleAppender" />
    </Logger>
    <Logger name="org.ignis.javaMud.Mud.cartografia.Outlands"  level="info" additivity="false">
        <appender-ref ref="javamud-all" />
